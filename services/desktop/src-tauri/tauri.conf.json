{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "MonkeysWorks",
  "version": "0.1.0",
  "identifier": "com.monkeysworks.desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "MonkeysWorks",
        "width": 1280,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "transparent": true,
        "titleBarStyle": "Transparent",
        "hiddenTitle": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis", "appimage", "deb", "dmg"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}