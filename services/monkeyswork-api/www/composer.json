{
  "name": "monkeyscloud/monkeyslegion-skeleton",
  "description": "Starter project for the MonkeysLegion framework",
  "type": "project",
  "license": "MIT",
  "keywords": [
    "framework",
    "monkeyslegion",
    "php",
    "skeleton",
    "boilerplate",
    "starter",
    "mvc",
    "api",
    "psr-7",
    "psr-15"
  ],
  "authors": [
    {
      "name": "MonkeysCloud Team",
      "email": "jorge@monkeys.cloud",
      "homepage": "https://monkeyslegion.com",
      "role": "Developer"
    }
  ],
  "homepage": "https://github.com/monkeyscloud/monkeyslegion-skeleton",
  "support": {
    "issues": "https://github.com/monkeyscloud/monkeyslegion-skeleton/issues",
    "source": "https://github.com/monkeyscloud/monkeyslegion-skeleton"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": "^8.4",
    "monkeyscloud/monkeyslegion": "^1.0",
    "laminas/laminas-diactoros": "^3.6",
    "monolog/monolog": "^3.9",
    "stripe/stripe-php": "^19.3"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.0",
    "http-interop/http-factory-tests": "^2.2",
    "phpstan/phpstan": "^2.1",
    "squizlabs/php_codesniffer": "^4.0"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/"
    },
    "files": [
      "src/Template/helpers.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "config": {
    "process-timeout": 0
  },
  "scripts": {
    "post-create-project-cmd": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\"",
      "@php vendor/bin/ml key:generate"
    ],
    "post-install-cmd": [
      "@php vendor/bin/ml key:generate --if-missing"
    ],
    "serve": "php vendor/bin/dev-server",
    "server:start": "php vendor/bin/dev-server",
    "server:start:public": "php vendor/bin/dev-server 0.0.0.0 8000",
    "server:stop": "php vendor/bin/dev-server stop",
    "server:restart": "php vendor/bin/dev-server restart",
    "server:status": "php vendor/bin/dev-server status",
    "test": "phpunit",
    "test:unit": "phpunit --testsuite=Unit",
    "test:integration": "phpunit --testsuite=Integration",
    "test:coverage": "phpunit --coverage-html coverage",
    "phpstan": "phpstan analyse src tests --level=8",
    "cs": "phpcs --standard=PSR12 src tests",
    "cs-fix": "phpcbf --standard=PSR12 src tests",
    "check": [
      "@cs",
      "@phpstan",
      "@test"
    ]
  },
  "bin": [
    "bin/ml",
    "bin/dev-server",
    "bin/dev-router.php"
  ],
  "extra": {
    "branch-alias": {
      "dev-main": "1.0.x-dev"
    }
  }
}
