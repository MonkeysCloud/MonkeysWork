{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://monkeysworks.com/schemas/events/milestone_accepted.v1.json",
  "title": "MilestoneAccepted",
  "type": "object",
  "required": [
    "event_id",
    "event_type",
    "event_version",
    "timestamp",
    "idempotency_key",
    "data"
  ],
  "properties": {
    "event_id": {
      "type": "string",
      "format": "uuid"
    },
    "event_type": {
      "const": "milestone_accepted"
    },
    "event_version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+$"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "idempotency_key": {
      "type": "string"
    },
    "source": {
      "type": "string"
    },
    "correlation_id": {
      "type": "string",
      "format": "uuid"
    },
    "data": {
      "type": "object",
      "required": [
        "milestone_id",
        "job_id",
        "contract_id",
        "accepted_by",
        "amount"
      ],
      "properties": {
        "milestone_id": {
          "type": "string",
          "format": "uuid"
        },
        "job_id": {
          "type": "string",
          "format": "uuid"
        },
        "contract_id": {
          "type": "string",
          "format": "uuid"
        },
        "freelancer_id": {
          "type": "string",
          "format": "uuid"
        },
        "accepted_by": {
          "type": "string",
          "format": "uuid"
        },
        "amount": {
          "type": "number",
          "minimum": 0
        },
        "currency": {
          "type": "string",
          "default": "USD"
        },
        "deliverable_urls": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uri"
          }
        },
        "client_rating": {
          "type": "integer",
          "minimum": 1,
          "maximum": 5
        },
        "client_feedback": {
          "type": "string"
        }
      }
    }
  }
}